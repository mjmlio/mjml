  },
  "homepage": "https://mjml.io",
  "dependencies": {
    "lodash": "^4.14.2",
    "mjml-core": "^2.3.2",
    "mjml-image": "^2.0.10",
    "react": "^15.3.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "markdown-table": "^1.0.0",
